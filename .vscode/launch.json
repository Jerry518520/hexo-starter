{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Hexo Server ",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/node_modules/hexo/bin/hexo",
      "args": ["server"],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
